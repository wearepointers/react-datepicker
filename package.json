{
  "name": "@wearepointers/react-datepicker",
  "description": "A simple, lightweight, accessible, and easily customizable datepicker built with React and Tailwind CSS.",
  "version": "1.0.5",
  "main": "./dist/es/index.js",
  "module": "./dist/es/index.js",
  "types": "./dist/es/index.d.ts",
  "author": "Pointers",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wearepointers/react-datepicker.git"
  },
  "bugs": {
    "url": "https://github.com/wearepointers/react-datepicker/issues"
  },
  "homepage": "https://github.com/wearepointers/react-datepicker#README",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/es/index.d.ts",
        "default": "./dist/es/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.cts",
        "default": "./dist/cjs/index.cjs"
      }
    }
  },
  "keywords": [
    "react-datepicker",
    "react-daterangepicker",
    "react-tailwind-datepicker",
    "react-tailwind-daterangepicker",
    "react-tailwindcss-datepicker",
    "react-tailwindcss-daterangepicker",
    "tailwindcss-datepicker",
    "tailwindcss-daterangepicker",
    "tailwind-datepicker",
    "tailwind-daterangepicker",
    "datepicker",
    "date-picker",
    "daterange",
    "date-range",
    "daterangepicker",
    "daterange-picker",
    "date-range-picker",
    "rangepicker",
    "range-picker"
  ],
  "scripts": {
    "dev": "next dev",
    "watch": "bunchee --watch",
    "clean": "rm -rf dist",
    "build": "pnpm run code-style:fix && pnpm run clean && bunchee",
    "pub": "pnpm run build && pnpm publish --access public --no-git-checks",
    "lint": "eslint . --ignore-path .gitignore --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ignore-path .gitignore --report-unused-disable-directives --max-warnings 0 --fix",
    "fmt:fix": "prettier --cache --write \"src/**/*.ts\" \"src/**/*.tsx\"",
    "fmt": "prettier --check \"src/**/*.ts\" \"src/**/*.tsx\"",
    "code-style": "pnpm run fmt && pnpm run lint",
    "code-style:fix": "pnpm run fmt:fix && pnpm run lint:fix"
  },
  "peerDependencies": {
    "@radix-ui/react-popover": "^1",
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19",
    "tailwindcss": "^3"
  },
  "devDependencies": {
    "bunchee": "^4.4.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/parser": "^6.18.1",
    "autoprefixer": "^10.4.16",
    "class-variance-authority": "^0.7.0",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-tailwindcss": "^3.14.0",
    "next": "14.0.4",
    "postcss": "^8.4.33",
    "prettier": "^3.2.2",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^2.2.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
